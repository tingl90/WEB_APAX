<script type="text/javascript">
    $(document).ready(function () {
        var url = window.location.href;
        url = url.substring(url.lastIndexOf('/') + 1);
        $('#' + url).addClass('active');
        if (url == "" || url == "QuanLyGiaoDich" || url == "ChiTietDangKyLop")
            $('#hosohocvien').removeClass('treeview').removeClass('active').addClass('treeview active');
        else {
            if (url == "ThuHocPhi") {
                $('#quanlyhocphi').removeClass('treeview').removeClass('active').addClass('treeview active');
            }else{
                if (url == "HocSinhMoi" || url == "HocSinh" || url == "ChoXepLop") {
                    $('#baocao').removeClass('treeview').removeClass('active').addClass('treeview active');
                } else {
                    if (url == "PhanQuyen") {
                        $('#hethong').removeClass('treeview').removeClass('active').addClass('treeview active');
                    } else {
                        $('#quanlylophoc').removeClass('treeview').removeClass('active').addClass('treeview active');
                    }
                }
            }
        }
    });
</script>
